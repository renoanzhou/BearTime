/* pages/confirm/confirm.wxss */
.container {
  background: #F0F0F0;
  display: flex;
  flex-direction: column;
}
.name {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 25rpx;
  color: #999;
  padding-left:25rpx;
}
.checkbox {
  border-radius: 20px;
}
.task-list {
  display: inline-block;
  box-sizing: border-box;
  font-size: 35rpx;
  height: 90rpx;
  width: 100%;
  background: white;
  line-height: 90rpx;
  padding-left:25rpx;
  color: #999;
  margin-top: 1px;
}
.scroll-view {
  
}
.submit {
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
}

.tasks {
  margin-top: 10rpx;
  position: relative;
  height: 90rpx;
}
.new-task {
  display: inline-block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: white;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
  padding-left: 20rpx;
  padding-right: 50px;
}
.task-confirm {
  position: absolute;
  font-size: 50rpx;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  color: #dd4747;
}
.hide-confirm {
  visibility: hidden;
}
.btn-active {
  background: #dd4747;
  color: white
}