/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: #F0F0F0;
  padding-top: 15rpx;
}
.tasks {
  position: relative;
  height: 90rpx;
}
.new-task {
  display: inline-block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: white;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
  padding-left: 20rpx;
  padding-right: 50px;
}
.task-confirm {
  position: absolute;
  font-size: 50rpx;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  color: #dd4747;
}
.tasks-list {
  padding: 15rpx 0 0 0;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}
.moveable-task {
  box-sizing: border-box;
  height: 90rpx;
  width: 100%;
  background: white;
  line-height: 90rpx;
  padding: 0 15rpx;
  color: #ccc;
  opacity: 0;
  display: block;
  
}
.tasks-move-area {
  width: 100%;
  flex-grow:1;
  height:200px;
  z-index: 999
}
.move_active {
  /* background: #ebebeb; */
  z-index: 999;
  opacity: 1
}
.hide-confirm {
  visibility: hidden;
}
.under_list {
  position: absolute;
  width: 100%;
  top: 0;
}
.under_task {
  box-sizing: border-box;
  border-top: 1px solid #ebebeb;
  height: 90rpx;
  width: 100%;
  background: white;
  line-height: 90rpx;
  padding: 0 15rpx;
  color: #999;
  padding-left: 20rpx;
}